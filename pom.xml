    <parent>
        <groupId>org.jasig.parent</groupId>
        <artifactId>jasig-parent</artifactId>
        <version>17</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jasig.service.persondir</groupId>
    <artifactId>person-directory-parent</artifactId>
    <packaging>pom</packaging>
    <version>1.5.0-SNAPSHOT</version>
    
    <scm>
        <connection>scm:svn:https://www.ja-sig.org/svn/person-directory/trunk</connection>
        <developerConnection>scm:svn:https://www.ja-sig.org/svn/person-directory/trunk</developerConnection>
        <url>http://developer.jasig.org/source/browse/jasigsvn/person-directory/trunk</url>
    </scm>
    
    <issueManagement>
        <url>${jasig-issues-base}/PERSONDIR</url>
        <system>${jasig-issues-system}</system>
    </issueManagement>

    <name>Person Directory Parent</name>
    <description>Parent project for the API and Impl packages.</description>

    <mailingLists>
        <mailingList>
            <name>Person-Directory Users</name>
            <subscribe>http://www.ja-sig.org/wiki/display/JSG/person-directory-user</subscribe>
            <unsubscribe>http://www.ja-sig.org/wiki/display/JSG/person-directory-user</unsubscribe>
            <archive>http://www.ja-sig.org/wiki/display/JSG/person-directory-user</archive>
        </mailingList>
        <mailingList>
            <name>Person-Directory Developers</name>
            <subscribe>http://www.ja-sig.org/wiki/display/JSG/person-directory-dev</subscribe>
            <unsubscribe>http://www.ja-sig.org/wiki/display/JSG/person-directory-dev</unsubscribe>
            <archive>http://www.ja-sig.org/wiki/display/JSG/person-directory-dev</archive>
        </mailingList>
    </mailingLists>
    
    <properties>
        <!-- Project Dependency Versions -->
        <aopalliance.verison>1.0</aopalliance.verison>
        <apacheds.verison>1.0.2</apacheds.verison>
        <commons-collections.verison>3.2.1</commons-collections.verison>
        <commons-lang.verison>2.5</commons-lang.verison>
        <commons-logging.verison>1.1.1</commons-logging.verison>
        <easymock.version>2.5.2</easymock.version>
        <hsqldb.verison>1.8.0.7</hsqldb.verison>
        <jaxb-impl.version>2.2</jaxb-impl.version>
        <junit.verison>4.8.1</junit.verison>
        <log4j.verison>1.2.16</log4j.verison>
        <servlet-api.version>2.3</servlet-api.version>
        <slf4j-log4j12.verison>1.5.11</slf4j-log4j12.verison>
        <spring.verison>2.5.6</spring.verison>
        <spring-ldap.verison>1.2.1</spring-ldap.verison>
        <spring-modules.verison>0.8a</spring-modules.verison>
    </properties>
    
    <modules>
        <module>person-directory-api</module>
        <module>person-directory-impl</module>
    </modules>
    
