<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/3.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/3.0.0
http://maven.apache.org/maven-v3_0_0.xsd">
	<pomVersion>3</pomVersion>
	<!-- ================================================================== -->
	<!-- Standard project information                                       -->
	<!-- ================================================================== -->
	<id>persondirectory</id>
	<artifactId>persondirectory</artifactId>
	<name>persondirectory</name>
	<groupId>ja-sig</groupId>
	<currentVersion>1.0</currentVersion>
	<inceptionYear>2005</inceptionYear>
	<url>http://www.uportal.org</url>
	<logo>http://www.ja-sig.org/images/jasig-head.gif</logo>
	<issueTrackingUrl>
		http://jasigch.princeton.edu:9000/jira/browse/UP
	</issueTrackingUrl>
	<license>
		<name>Ja-Sig Collaborative License</name>
		<url>http://www.uportal.org/license.html</url>
		<distribution>manual</distribution>
		<comments />
	</license>
	<repository>
		<connection>
			scm:cvs:pserver:anonymous@www.uportal.org:/home/cvs/jasig:sandbox/PersonDirectory
		</connection>
		<developerConnection>
			scm:cvs:pserver:localhost:/home/cvs/jasig:sandbox/PersonDirectory
		</developerConnection>
		<url>http://www.uportal.org/cgi-bin/viewcvs.cgi/</url>
	</repository>
	<developers>
		<developer>
			<name>Ernest Rider</name>
			<id>erider</id>
			<email>erider@unicon.net</email>
			<organization>UNICON</organization>
		</developer>
	</developers>
	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.8</version>
		</dependency>
		<dependency>
			<type>jar</type>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.4</version>
		</dependency>
        <dependency>
            <groupId>springframework</groupId>
            <artifactId>spring</artifactId>
            <version>1.2.3</version>
            <properties>
				<war.bundle>true</war.bundle>
			</properties>
            <type>jar</type>
            <url>http://www.springframework.org</url>
        </dependency>
		<dependency>
			<type>jar</type>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.1</version>
		</dependency>
		<dependency>
			<type>jar</type>
			<groupId>commons-dbcp</groupId>
			<artifactId>commons-dbcp</artifactId>
			<version>1.2.1</version>
		</dependency>
		<dependency>
			<type>jar</type>
			<groupId>commons-pool</groupId>
			<artifactId>commons-pool</artifactId>
			<version>1.2</version>
		</dependency>
		<dependency>
			<type>jar</type>
			<groupId>hsqldb</groupId>
			<artifactId>hsqldb</artifactId>
			<version>1.7.2.2</version>
			<!-- uPortal uses 1.7.2.4, but that version is
			not available via Maven on ibiblio -->
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<unitTestSourceDirectory>tests/src</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test.java</include>
			</includes>
			<excludes>
				<exclude>**/Abstract*Test.java</exclude>
			</excludes>
		</unitTest>
		<defaultGoal/>
	</build>

</project>
